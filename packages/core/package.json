{
  "name": "@color-kit/core",
  "version": "0.0.1",
  "description": "Color space conversions, manipulation, contrast, harmony, and scale generation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "color",
    "oklch",
    "oklab",
    "color-conversion",
    "contrast",
    "wcag",
    "color-manipulation"
  ],
  "author": "pbroom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pbroom/color-kit.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}

{
  "name": "color-kit",
  "private": true,
  "description": "Open-source primitive UI components and tooling for building color interfaces",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev:prepare": "pnpm --filter @color-kit/core build && pnpm --filter @color-kit/react build",
    "dev": "pnpm dev:prepare && pnpm --parallel --filter @color-kit/core --filter @color-kit/react --filter @color-kit/docs dev",
    "test": "pnpm -r test",
    "check:preprod": "node scripts/check-preproduction.mjs",
    "publish:next": "pnpm check:preprod && pnpm -r --filter \"./packages/*\" publish --access public --tag next --no-git-checks",
    "publish:next:dry": "pnpm check:preprod && pnpm -r --filter \"./packages/*\" publish --access public --tag next --no-git-checks --dry-run",
    "agents:add": "node scripts/agent-learning.mjs add",
    "agents:check": "node scripts/agent-learning-check.mjs",
    "agents:check:strict": "node scripts/agent-learning-check.mjs --strict",
    "pr:stack": "bash ./scripts/stack-pr.sh",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r exec rm -rf dist node_modules"
  },
  "keywords": [
    "color",
    "color-picker",
    "oklch",
    "ui-components",
    "react",
    "headless",
    "accessibility"
  ],
  "author": "pbroom",
  "license": "MIT",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "playwright": "^1.58.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.54.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.2.13",
      "@types/react-dom": "^19.2.3",
      "babel-plugin-react-compiler": "^1.0.0",
      "react": "^19.2.4",
      "react-dom": "^19.2.4"
    }
  }
}
